{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++.exe build release",
			"windows": {
				"command": "mingw32-make",
				"args": [
					"release-windows"
				],
			},
			"command": "make",
			"args": [
				"release-linux"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "C/C++: g++.exe build release and run",
			"windows": {
				"command": "mingw32-make",
				"args": [
					"release-windows-run"
				],
			},
			"command": "make",
			"args": [
				"release-linux-run"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "C/C++: g++.exe build debug",
			"windows": {
				"command": "mingw32-make",
				"args": [
					"debug-windows"
				],
			},
			"command": "make",
			"args": [
				"debug-linux"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "C/C++: g++.exe build debug and run",
			"windows": {
				"command": "mingw32-make",
				"args": [
					"debug-windows-run"
				],
			},
			"command": "make",
			"args": [
				"debug-linux-run"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}